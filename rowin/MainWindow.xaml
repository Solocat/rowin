                            </StackPanel>
                        </Border>
                        
                        <DataTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="item" Property="BorderBrush" Value="#77FFFFFF" />
                                <Setter TargetName="item" Property="Background" Value="#77000000" />
                            </Trigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>-->
        </StackPanel>
    </Grid>
</Window>
